{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with GCC-11",
			"command": "/usr/bin/g++-11",
			"args": [
				"-g",
				"-std=c++20",
				"${file}",
				"-o",
				"${fileDirname}/app"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++-11"
		},
		{
			"type": "cppbuild",
			"label": "Build with Clang",
			"command": "/usr/bin/clang++-15",
			"args": [
				"-g",
				"-std=c++20",
				"${file}",
				"-o",
				"${fileDirname}/app"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++-15"
		}
	]
}